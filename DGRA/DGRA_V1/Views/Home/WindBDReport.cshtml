        }
        let statelist = "";
        $('select#state option:selected').each(function () {
            statelist += $(this).val() + ",";
            // console.log($(this).val());

        });
        statelist = statelist != "" ? statelist.slice(0, -1) : statelist;
        /*let stateData = [];
