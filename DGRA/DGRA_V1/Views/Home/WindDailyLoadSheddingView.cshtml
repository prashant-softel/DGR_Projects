<script type="text/javascript">
    $(document).ready(function () {
        $('#daterange').daterangepicker(
            {
                maxDate: new Date(),
                locale: {
                    format: 'DD/MM/YYYY',
                }
            });
    });
    window.onload = function () {
        var state = "";
        var spv = "";
        var site_ids = "@Html.Raw(windSiteList.TrimEnd(','))";
        $.ajax({
            type: "POST",
            //url: "/WindReport/GetSiteList",
            url: '@Url.Action("GetSiteList", "WindReport")' + '?sitelist=' + site_ids,
            contentType: "application/json; charset=utf-8",
            datatype: "html",
            success: function (result, status, xhr) {
                var options = "";
                for (var k = 0; k < result.length; k++) {
                    options += '<option value="' + result[k].site_master_id + '">' + result[k].site + '</option>';
                }
                $("#site").html(options);
                $('select#site').multipleSelect({
                    "minimumCountSelected": 2,
                    "placeholder": "Select Site(s)",
                    filter:true
                });
            }

        });
    }

    function getReport() {

        //var site = $('select#site option:selected').val();
        let site_id = "";

        $('select#site option:selected').each(function () {
            site_id += $(this).val() + ",";
           // console.log($(this).val());
        });
        site_id = site_id != "" ? site_id.slice(0, -1) : site_id;
        if (site_id == "" || site_id == null) {
            alert("Please select site ");
            return false;
        }
        document.getElementById("loader").style.display = 'flex';
        console.log(site_id);
        var daterange = $('#daterange').val();
        var arr1 = new Array();
        arr1 = daterange.split("-");
        var fromDate = moment(arr1[0], 'DD/MM/YYYY').format('YYYY-MM-DD');
        var toDate = moment(arr1[1], 'DD/MM/YYYY').format('YYYY-MM-DD');
       
        $.ajax({
            type: "POST",
           // url: "/WindView/GetDailyLoadshedding?site=" + site + "&fromDate=" + fromDate + "&toDate=" + toDate,
            url: '@Url.Action("GetDailyLoadshedding", "WindView")' + '?site=' + site_id + '&fromDate=' + fromDate + '&toDate=' + toDate,
            contentType: "application/json; charset=utf-8",
            // data: '{"state":"' + val + '"}',
            datatype: "JSON",
            success: function (result, status, xhr) {
                console.log(result);
                var tbl = '<table id="example1" class="table table-bordered table-striped">';
                tbl += '<thead class="tbl-head"><tr><th>Site</th><th style="width:100px">Date</th><th>Start Time</th><th>End Time</th><th>Total Time</th><th>Permissible Load (MW)</th><th>Generation loss in kWh due to Load shedding</th></tr></thead><tbody>';

                if (result.length > 0) {
                    for (var i = 0; i < result.length; i++) {


                        var formattedDate = moment(result[i].date, 'YYYY/MM/DD').format('DD-MM-YYYY');

                        tbl += '<tr>';
                        tbl += '<td class="text-left">' + result[i].site + '</td>';
                        tbl += '<td class="text-left">' + formattedDate + '</td>';
                        tbl += '<td class="text-right">' + result[i].start_Time['totalHours'].toFixed(2) + '</td>';
                        tbl += '<td class="text-right">' + result[i].end_Time['totalHours'].toFixed(2) + '</td>';
                        tbl += '<td class="text-right">' + result[i].total_Time['totalHours'].toFixed(2) + '</td>';
                        tbl += '<td class="text-right">' + result[i].permissible_Load_MW + '</td>';
                        tbl += '<td class="text-right">' + result[i].gen_loss_kWh.toFixed(2) + '</td>';
                        tbl += '</tr>';
                    }
                }
                else {

                    tbl += '<tr><td colspan="7">No Data Present</td></tr>';
                }
                tbl += '</tbody></table>';
                $("#DailyLoadShedding").html("").html(tbl);
                $.fn.DataTable.ext.pager.numbers_length = 6;
                $('#example1').DataTable({
                    dom: 'Bfrtip',
                    title: 'WindDailyLoadSheddingLog',
                    responsive: false,
                    lengthChange: false,
                    autoWidth: false,
                    paging: true,
                    lengthChange: false,
                    searching: true,
                    ordering: true,
                    info: true,
                    autoWidth: false,
                    responsive: false,
                    buttons: [
                        {
                            extend: 'excel',
                            title: 'Wind Daily Load Shedding View',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        {
                            extend: 'csv',
                            title: 'Wind Daily Load Shedding View',
                            exportOptions: {
                                columns: ':visible'
                            }
                        },
                        'colvis'
                    ]
                });
                $(".dt-buttons").addClass('btn-group flex-wrap');
                $(".dt-buttons > button").addClass('btn btn-secondary');
                $(".dataTables_filter> label >input").addClass('form-control form-control-sm');
                $('#example1').removeClass('dataTable');
                document.getElementById("loader").style.display = 'none';
            }
        });
    }
</script>