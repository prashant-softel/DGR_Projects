    $(document).ready(function () {
        $('#daterange').daterangepicker(
            {
                locale: {
                    format: 'DD/MM/YYYY',
                }
            });
    });
    window.onload = function () {
        var state = "";
        var spv = "";
        $.ajax({
            type: "POST",
            //url: "/WindReport/GetSiteList",
            url: '@Url.Action("GetSiteList", "WindReport")',
            contentType: "application/json; charset=utf-8",
            // data: '{"state":"' + val + '"}',
            datatype: "html",
            success: function (result, status, xhr) {
                var options = "";
                options += '<option value="">Select Site</option>';
                options += '<option value="0">All Site</option>';
                for (var k = 0; k < result.length; k++) {
                    options += '<option value="' + result[k].site_master_id + '">' + result[k].site + '</option>';
                }
                $("#site").html(options);

            }

        });
    }

    function getReport() {
        var site = $('select#site option:selected').val();
        var daterange = $('#daterange').val();
        var arr1 = new Array();
        arr1 = daterange.split("-");
        var fromDate = moment(arr1[0], 'DD/MM/YYYY').format('YYYY-MM-DD');
        var toDate = moment(arr1[1], 'DD/MM/YYYY').format('YYYY-MM-DD');
        // var fromDate = "2021-04-14";
        //var toDate = "2021-04-20";
        $.ajax({
            type: "POST",
           // url: "/WindView/GetDailyLoadshedding?site=" + site + "&fromDate=" + fromDate + "&toDate=" + toDate,
            url: '@Url.Action("GetDailyLoadshedding", "WindView")' + '?site=' + site + '&fromDate=' + fromDate + '&toDate=' + toDate,
            contentType: "application/json; charset=utf-8",
            // data: '{"state":"' + val + '"}',
            datatype: "JSON",
            success: function (result, status, xhr) {
                console.log(result);
                var tbl = '<table id="example1" class="table table-bordered table-striped">';
                tbl += '<thead class="tbl-head"><tr>';
                tbl += '<th>Site</th>';
                tbl += '<th style="width:100px">Date</th>';
                tbl += '<th>Start Time</th>';
                tbl += '<th>End Time</th>';
                tbl += '<th>Total Time</th>';
                tbl += '<th>Permissible Load (MW)</th>';
                tbl += '<th>Generation loss in kWh due to Load shedding</th>';
                tbl += '</tr></thead>';

                if (result.length > 0) {
                    for (var i = 0; i < result.length; i++) {


                        var formattedDate = moment(result[i].date, 'YYYY/MM/DD').format('DD-MM-YYYY');

                        tbl += '<tr>';
                        tbl += '<td class="text-left">' + result[i].site + '</td>';
                        tbl += '<td class="text-left">' + formattedDate + '</td>';
                        tbl += '<td class="text-right">' + result[i].start_Time + '</td>';
                        tbl += '<td class="text-right">' + result[i].end_Time + '</td>';
                        tbl += '<td class="text-right">' + result[i].total_Time + '</td>';
                        tbl += '<td class="text-right">' + result[i].permissible_Load_MW + '</td>';
                        tbl += '<td class="text-right">' + result[i].gen_loss_kWh.toFixed(2) + '</td>';
                        tbl += '</tr>';
                    }
                }
                else {

                    //tbl += '<tr><th colspan="7" style="text-align:center">Data Not Available <th></tr>';
                }
                tbl += '</table>';
                $("#DailyLoadShedding").html(tbl);
                $.noConflict();
                $('#example1').DataTable({
                    "responsive": false, "lengthChange": false, "autoWidth": false,
                    "buttons": ["csv", "excel", "colvis"],
                    "paging": true,
                    "lengthChange": false,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": false,
                    "responsive": false,
                }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
                $('#example1').removeClass('dataTable');
            }
        });
    }
</script>