<script type="text/javascript">
   
    window.onload = function () {
      
        getLocationData();
    }
    function getLocationData() {
        $.ajax({
            type: "GET",
            url: "/WindReport/GetLocationMaster",
            contentType: "application/json; charset=utf-8",
            //data: '{"countryname":"' + selcountry + '"}',
            datatype: "html",
            success: function (result, status, xhr) {
                console.log(result);
                var tbl = '<table id="example1" class="table table-bordered table-striped">';
                tbl += '<thead class="tbl-head"><tr>';
                tbl += '<td>Site</td>';
                tbl += '<td>WTG</td>';
                tbl += '<td>Feeder</td>';
                tbl += '<td>Max kWh/Day</td>';
                tbl += '</tr></thead>';
                if (result.length > 0) {
                    for (var i = 0; i < result.length; i++) {

                      
                        tbl += '<tr>';
                        tbl += '<td>' + result[i].site + '</td>';
                        tbl += '<td>' + result[i].wtg + '</td>';
                        tbl += '<td>' + result[i].feeder + '</td>';
                        tbl += '<td>' + result[i].max_kwh_day + '</td>';
                        tbl += '</tr>';
                    }
                }
                else {

                    // tbl += '<tr><th colspan="19" style="text-align:center">Data Not Available <th></tr>';
                }
                tbl += '</table>';
                $("#locationData").html(tbl);
                $.noConflict();
                $('#example1').DataTable({
                    "responsive": true, "lengthChange": false, "autoWidth": false,
                    "buttons": ["csv", "excel","colvis"],
                    //"buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                    "paging": true,
                    "lengthChange": false,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": false,
                    "responsive": true,
                }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

            }
        });
    }
</script>
