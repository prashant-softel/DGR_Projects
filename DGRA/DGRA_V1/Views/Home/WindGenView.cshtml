<script type="text/javascript">
    $(document).ready(function () {
        $('#daterange').daterangepicker(
            {
                locale: {
                    format: 'DD/MM/YYYY',
                }
            });
    });



    function getReport() {

        var daterange = $('#daterange').val();
        var arr1 = new Array();
        arr1 = daterange.split("-");
        var fromDate = moment(arr1[0], 'DD/MM/YYYY').format('YYYY-MM-DD');
        var toDate = moment(arr1[1], 'DD/MM/YYYY').format('YYYY-MM-DD');

        $.ajax({
            type: "GET",
            url: "/WindView/WindGenView?fromDate=" + fromDate + "&toDate=" + toDate,
            contentType: "application/json; charset=utf-8",
            //data: '{"countryname":"' + selcountry + '"}',
            datatype: "JSON",
            success: function (result, status, xhr) {
                console.log(result);
                var tbl = '<table id="example1" class="table table-bordered table-striped">';
                tbl += '<thead class="tbl-head"><tr>';
                tbl += '<th style="width:90px">Date</th>';
                tbl += '<th >State</th>';
                tbl += '<th>Site</th>';
                tbl += '<th>Wind(m/s)</th>';
                tbl += '<th>KWH</th>';
                tbl += '<th >MA(ACT)</th>';
                tbl += '<th>MA(CON)</th>';
                tbl += '<th>IGA</th>';
                tbl += '<th>EGA</th>';
                tbl += '<th>PLF</th>';
                tbl += '<th>Grid hrs</th>';
                tbl += '<th>Lull hrs</th>';
                tbl += '<th>Pro hrs</th>';
                tbl += '<th>USMH</th>';
                tbl += '<th>SMH</th>';
                tbl += '<th>Others</th>';
                tbl += '<th>IGBDH</th>';
                tbl += '<th>EGBDH</th>';
                tbl += '<th>Load Sh.</th>';
                tbl += '</tr></thead>';

                if (result.length > 0) {
                    for (var i = 0; i < result.length; i++) {

                        //var tempDate = new Date(result[i].date);
                        //var formattedDate = [tempDate.getDate(), tempDate.getMonth() + 1, tempDate.getFullYear()].join('-');
                        var formattedDate = moment(result[i].date, 'YYYY/MM/DD').format('DD-MM-YYYY');
                        tbl += '<tr>';
                        tbl += '<td>' + formattedDate + '</td>';
                        tbl += '<td>' + result[i].state + '</td>';
                        tbl += '<td>' + result[i].site + '</td>';
                        tbl += '<td>' + result[i].wind_speed + '</td>';
                        tbl += '<td>' + result[i].kwh + '</td>';
                        tbl += '<td>' + result[i].ma_actual + '</td>';
                        tbl += '<td>' + result[i].ma_contractual + '</td>';
                        tbl += '<td>' + result[i].iga + '</td>';
                        tbl += '<td>' + result[i].ega + '</td>';
                        tbl += '<td>' + result[i].plf + '</td>';
                        tbl += '<td>' + result[i].grid_hrs + '</td>';
                        tbl += '<td>' + result[i].lull_hrs + '</td>';
                        tbl += '<td>' + result[i].production_hrs + '</td>';
                        tbl += '<td>' + result[i].unschedule_hrs + '</td>';
                        tbl += '<td>' + result[i].schedule_hrs + '</td>';
                        tbl += '<td>' + result[i].others + '</td>';
                        tbl += '<td>' + result[i].igbdh + '</td>';
                        tbl += '<td>' + result[i].egbdh + '</td>';
                        tbl += '<td>' + result[i].load_shedding + '</td>';
                        tbl += '</tr>';
                    }
                }
                else {

                   // tbl += '<tr><th colspan="19" style="text-align:center">Data Not Available <th></tr>';
                }
                tbl += '</table>';
                $("#DailyGenView").html(tbl);
                $.noConflict();
                $('#example1').DataTable({
                    "responsive": true, "lengthChange": false, "autoWidth": false,
                    "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
                    "paging": true,
                    "lengthChange": false,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": false,
                    "responsive": true,
                }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            }
        });
    }
   


</script>

