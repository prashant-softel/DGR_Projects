@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hero Future Energies</title>

    <link rel="icon" type="image/x-icon" href="~/Content/img/CMMS_Logo.png">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/theme/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/theme/dist/css/adminlte.min.css">


    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        .login-box {
            width: 965px !important;
        }

        .login-box-msg {
            padding: 0 2px 10px !important;
            text-align: left !important;
        }
    </style>
</head>

<body class="hold-transition login-page">

    <div class="login-box" style=" width: 600px !important;">

        <!-- /.login-logo -->
        <div class="card" style="border-radius:20px">
            <div class="card-body login-card-body" style="border-radius:20px">
                <div class="col-md-12 row">
                    <div class="col-md-12 text-center">
                        <h3 class="text-danger">SSO Login Failed</h3>
                        <div class="col-md-12 row">
                            
                            <div class="col-md-12 text-left" style="padding-left: 30px; padding-right: 30px;">
                                Dear user,<br>
                                Your user id ( @TempData["username"] ) is not registed on portal.

                                <br>
                                Please contact your admin to register your user id.
                            </div>
                            
                            </div>
                        </div>

                    </div>




            </div>

        </div>
    </div>
</body>
</html>
    
