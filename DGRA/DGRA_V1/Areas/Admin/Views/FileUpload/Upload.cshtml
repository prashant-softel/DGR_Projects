    </section>


    <section class="content">


        <div class="card">
            <div class="card-header">
                <h3 class="card-title text-center">Upload DGR File</h3>

                <!--<div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>-->
            </div>
            <form action="@Url.Action("Upload","FileUpload")" method="post" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label text-right">Site Type:</label>
                                <div class="col-sm-9 input-group date" id="reservationdate" data-target-input="nearest">
                                    <select class="form-control custom-select" style="width: 100%;" name="FileUpload">
                                        @*<option value="0">Please select</option>*@
                                        @foreach (var fileUploadType in FileUploadType.All)
                                        {
                                            <option value="@fileUploadType">@fileUploadType</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="custom-file form-group row">
                                <input type="file" class="custom-file-input" id="customFile" name="Path">
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                        </div>
                        <div class="col-md-2"><button type="submit" class="btn btn-block btn-success">Upload</button></div>
                        <div class="col-md-2"><button type="button" class="btn btn-block btn-danger">Cancel</button></div>
                    </div>
                </div>
                
            </form>
            <div class="col-md-12">
                <h3>Templates</h3>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-4">
                    @*<a href="#">Wind_DGR_Automation.xlxs</a><br />*@

                    <a href="../SampleFormat/Wind_DGR_Automation.xlsx" download>Wind_DGR_Automation.xlsx</a><br />

                    @if (@HttpContextAccessor.HttpContext.Session.GetString("role") == "Admin")
                    {

                        <a href="../SampleFormat/Wind_daily_LoadShedding.xlsx" download>Wind_daily_load_Shedding.xlsx</a><br />
                        <a href="../SampleFormat/Daily_Target_KPI.xlsx" download>Wind_daily_Target_KPI.xlsx</a><br />
                        <a href="../SampleFormat/Wind_MonTargetKPI.xlsx" download>Wind_Monthly_Target_KPI.xlsx</a><br />
                        <a href="../SampleFormat/Wind_JMR_Template.xlsx" download>Wind_Monthly_JMR.xlsx</a><br />
                        <a href="../SampleFormat/Wind_MonthlyLinLoss.xlsx" download>Wind_Monthly_Lineloss.xlsx</a><br />
                        <a href="../SampleFormat/WindSiteMaster.xlsx" download>SiteMaster.xlsx</a><br />
                        <a href="../SampleFormat/WindLocationMaster.xlsx" download>SiteLocation.xlsx</a><br />
                    }
                </div>
                <div class="col-md-4">
                    @*<a href="#">Wind_DGR_Automation.xlxs</a><br />*@
                    <a href="../SampleFormat/Solar_DGR_Automation.xlsx" download>Solar_DGR_Automation.xlsx</a><br />

                    @if (@HttpContextAccessor.HttpContext.Session.GetString("role") == "Admin")
                    {
                        <a href="../SampleFormat/Solar_Daily_LoadShedding.xlsx" download>Solar_daily_load_Shedding.xlsx</a><br />
                        <a href="../SampleFormat/Solar_daily_Target_KPI.xlsx" download>Solar_daily_Target_KPI.xlsx</a><br />
                        <a href="../SampleFormat/SolarMonthlyTargetKPI.xlsx" download>Solar_Monthly_Target_KPI.xlsx</a><br />
                        <a href="../SampleFormat/Solar_Monthly_JMR.xlsx" download>Solar_Monthly_JMR.xlsx</a><br />
                        <a href="../SampleFormat/Solar_Monthly_Lineloss.xlsx" download>Solar_Monthly_Lineloss.xlsx</a><br />
                        <a href="../SampleFormat/SolarSiteMaster.xlsx" download>SiteMaster.xlsx</a><br />
                        <a href="../SampleFormat/SolarLocationMaster.xlsx" download>SiteLocation.xlsx</a><br />
                    }
                </div>
                <div class="col-md-3">

                </div>
            </div>
            <hr>
            <div class="col-md-12 text-center">
                <br>You can download these templates and update data in that and upload.<br>
                <b>Note :</b> Please do not change the name of the tab name in the template file.<br>
                Date format must be "DD/MM/YYYY" and "DD-MM-YYYY". </p>
            </div>
            <div class="card-footer">

            </div>

        </div>


    </section>

</div>
